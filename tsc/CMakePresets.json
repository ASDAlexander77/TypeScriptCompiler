{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 17,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using using compilers for Visual Studio 17 2022 (x86_x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/../__build/tsc/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../__build/install/${presetName}",
                "TSC_PACKAGE_VERSION": "$env{TSC_PACKAGE_VERSION}"
            }
        },
        {
            "name": "windows-msbuild",
            "inherits": "default",
            "displayName": "Visual Studio Professional 2022 - x86_amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x86_x64 architecture)",
            "toolset": "host=x86",
            "architecture": "x64",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "ninja",
            "inherits": "default",
            "generator": "Ninja",
            "displayName": "Ninja",
            "description": "Ninja"
        }
    ],
    "buildPresets": [
        {
            "name": "windows-msbuild-debug",
            "displayName": "Visual Studio Professional 2022 - x86_amd64 - Debug",
            "configurePreset": "windows-msbuild",
            "configuration": "Debug"
        },
        {
            "name": "windows-msbuild-release",
            "displayName": "Visual Studio Professional 2022 - x86_amd64 - Release",
            "configurePreset": "windows-msbuild",
            "configuration": "Release"
        },
        {
            "name": "ninja-debug",
            "displayName": "Ninja - Debug",
            "configurePreset": "ninja",
            "configuration": "Debug"
        },
        {
            "name": "ninja-release",
            "displayName": "Ninja - Release",
            "configurePreset": "ninja",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "windows-msbuild",
            "configurePreset": "windows-msbuild",
            "inherits": "default"
        }
    ]
}